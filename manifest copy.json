{
    "manifest_version": 2,
    "name": "Webcam Access Detector",
    "version": "1.0",
    "description": "Detects when a tab tries to access the webcam or microphone.",
    "permissions": [
      "tabs",
      "activeTab",
      "webNavigation",
      "*://*/*"
    ],
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["inject.js"],
        "run_at": "document_start",
        "all_frames": true
      }
    ],
    "web_accessible_resources": [
      "*"
     ],
    "browser_action": {
      "default_popup": "popup.html"
    }
  }
  