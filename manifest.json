{
    "manifest_version": 3,
    "name": "Camera/Mic Access Notifier",
    "version": "1.0",
    "description": "Detects when a tab tries to access the webcam or microphone.",
    "permissions": [
      "activeTab",
      "scripting",
      "webNavigation",
      "tabs",
      "notifications",
      "storage"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["inject.js"],
        "run_at": "document_start",
        "all_frames": false
      }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [{
    "resources": [
      "*"
    ],
    "matches": [
      "*://*/*"
    ]
  }]
  }
  