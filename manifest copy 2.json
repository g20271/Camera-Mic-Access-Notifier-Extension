{
    "manifest_version": 3,
    "name": "Webcam Access Detector",
    "version": "1.0",
    "description": "Detects when a tab tries to access the webcam or microphone.",
    "permissions": [
      "activeTab",
      "scripting",
      "webNavigation"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [{
    "resources": [
      "*"
    ],
    "matches": [
      "*://*/*"
    ]
  }]
  }
  